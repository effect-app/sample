{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "esModuleInterop": true,
    "baseUrl": "./",
    "rootDir": "./src",
    // keep in here, cause madge can't detect it from extended tsconfig
    "moduleResolution": "Node16",
    "paths": {
      "#core/*": [
        "./src/core/*.js"
      ],
      // TODO: auto gen
      "#Blog/*": [
        "./src/Blog/*.js"
      ],
      "#Operations/*": [
        "./src/Operations/*.js"
      ],
      "#Accounts/*": [
        "./src/Accounts/*.js"
      ],
      "#HelloWorld/*": [
        "./src/HelloWorld/*.js"
      ],
      "#resources": [
        "./src/resources.js"
      ],
      "#resources/*": [
        "./src/resources/*.js"
      ],
      "#Domain/*": [
        "./src/Domain/*.js"
      ],
      "#api/*": [
        "./src/*.js"
      ]
    },
    "types": [
      "../types/modules",
      "vite/types/importMeta.d.ts"
    ],
    "outDir": "./dist",
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./dist",
    "*.test.ts",
    "node_modules",
    "build",
    "lib",
    "dist",
    "**/*.d.ts.map",
    ".git",
    ".data",
    "**/.*",
    "**/*.tmp"
  ]
}